# =============================================================================
# LinkedProcurement Backend Configuration
# Copy this to .env and fill in your values
# =============================================================================

# Application
SECRET_KEY=your-secret-key-minimum-32-characters-long
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database (Supabase PostgreSQL or local)
DATABASE_URL=postgresql://user:password@localhost:5432/linkedprocurement

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@linkedprocurement.com

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=linkedprocurement-documents
AWS_REGION=us-east-1

# Redis
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Pusher (Real-time)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Frontend URL
FRONTEND_URL=http://localhost:3000